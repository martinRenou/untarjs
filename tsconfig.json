{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "target": "es2020",
    "isolatedModules": true,
    "types": [
      "node",
      "jest"
    ],
    "skipLibCheck": true,
    "lib": [
      "ES2019",
      "WebWorker",
      "DOM"
    ],
    "allowJs": true,
    "outDir": "lib",
    "rootDir": "src"
  },
  "include": ["src/**/*"]
}
